---
import logo from "/assets/hazn_logo.svg";
import sparkles from "/assets/sparkles.svg";
import Section from "../components/section.astro";
import "@fontsource/source-sans-pro";
import "@fontsource/source-serif-pro";

export interface Props {
    title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>

    <body>
        <div class="bg-white max-w-5xl mx-auto">
            <header class="pb-2">
                <div
                    class="flex justify-between md:gap-5 h-12 md:h-16 mx-auto border-b-[1px] md:border-x-[1px] border-black"
                >
                    <!-- hazn logo -->
                    <img
                        class="flex-initial relative md:h-20 pl-1 top-[11px]"
                        src={logo}
                        alt="Logo of my nickname: hazn"
                    />
                    <!-- as above, so below -->
                    <div class="flex pr-1 md:pr-4 gap-1">
                        <span
                            class="flex-initial place-self-center font-sans text-sm md:text-lg"
                            >as above, so below
                        </span>
                        <!-- sparkles emoji -->
                        <img
                            class="flex-initial place-self-center h-[75%]"
                            src={sparkles}
                            alt="Logo of my nickname: hazn"
                        />
                    </div>
                </div>
            </header>

            <!-- Hero section -->
            <main>
                <!-- About me  -->
                <Section header="About me" />
            </main>
        </div>
    </body>
</html>
