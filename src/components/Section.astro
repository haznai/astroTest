---
export interface Props {
    header: string;
}

const { header } = Astro.props as Props;
---

<div
    class="bg-[url('/assets/bg1.png')] bg-[length:30%] bg-[right_4rem_bottom_3rem] bg-no-repeat h-96"
>
    <div class="backdrop-filter backdrop-blur-3xl h-full">
        <h1 class="font-sans text-2xl md:text-4xl pl-4 md:pl-6">
            {header}
            <slot />
        </h1>
    </div>
</div>
